@model List<Petstore_GroupProject8.Models.OrderItem>

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-5">
    <h2>Shopping Cart</h2>
    @if (Model.Count == 0)
    {
        <p>Your cart is empty.</p>
    }
    else
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Price Per Unit</th>
                    <th>Total Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Product.Name</td>
                        <td>@item.Quantity</td>
                        <td>$@item.PricePerUnit</td>
                        <td>$@item.TotalPrice</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
