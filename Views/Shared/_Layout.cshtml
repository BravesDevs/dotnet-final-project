@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>Home - PetStore</title>
    <meta name="description" content="Your one-stop shop for all your pet's needs.">
    <meta name="keywords" content="Pets, Pet Store, Pet Supplies, Dog, Cat, Accessories">

    <!-- Favicons -->
    <link href="~/img/favicon.png" rel="icon">
    <link href="~/img/apple-touch-icon.png" rel="apple-touch-icon">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,400;1,400&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">

    <!-- Main CSS File -->
    <link href="~/css/main.css" rel="stylesheet">
</head>

<body class="index-page">

<!-- Header Section -->
<header id="header" class="header d-flex align-items-center position-relative">
    <div class="container-fluid container-xl position-relative d-flex align-items-center justify-content-between">

        <a href="~/Home/Index" class="logo d-flex align-items-center">
            <img src="~/img/logo.png" alt="PetStore Logo" width="120">
        </a>

        <nav id="navmenu" class="navmenu">
            <ul>
                <li><a href="~/Home/Index" class="active">Home</a></li>
                <li><a href="~/Products">Products</a></li>
                <li><a href="~/About">About Us</a></li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li>
                        <a class="nav-link" href="/Identity/Account/Manage">My Account</a>
                    </li>
                    <li class="nav-item">
                        <form method="post" asp-controller="Account" asp-action="Logout">
                            <button type="submit" class="btn btn-link nav-link" style="text-decoration: none;">Logout</button>
                        </form>
                    </li>
                }
                else
                {
                    <li><a href="/Identity/Account/Login">Login</a></li>
                }
            </ul>
            <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
        </nav>

    </div>
</header>

<!-- Main Content Area -->
<main class="main">
    @RenderBody()
</main>

<!-- Footer Section -->
<footer id="footer" class="footer dark-background">

    <div class="footer-top">
        <div class="container">
            <div class="row gy-4">
                <div class="col-lg-4 col-md-6 footer-about">
                    <a href="~/Home/Index" class="logo d-flex align-items-center">
                        <span class="sitename">PetStore</span>
                    </a>
                    <div class="footer-contact pt-3">
                        <p>1234 Paw Street</p>
                        <p>New York, NY 10001</p>
                        <p class="mt-3"><strong>Phone:</strong> <span>+1 555-1234-5678</span></p>
                        <p><strong>Email:</strong> <span>contact@petstore.com</span></p>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6 footer-links">
                    <h4>Categories</h4>
                    <ul>
                        <li><a href="~/Products/DogFood">Dog Food</a></li>
                        <li><a href="~/Products/CatFood">Cat Food</a></li>
                        <li><a href="~/Products/Toys">Toys</a></li>
                        <li><a href="~/Products/Accessories">Accessories</a></li>
                        <li><a href="~/Products/Healthcare">Healthcare</a></li>
                    </ul>
                </div>

                <div class="col-lg-4 col-md-6 footer-links">
                    <h4>Support</h4>
                    <ul>
                        <li><a href="~/ContactUs">Contact Us</a></li>
                        <li><a href="~/ShippingPolicy">Shipping Policy</a></li>
                        <li><a href="~/ReturnPolicy">Return Policy</a></li>
                        <li><a href="~/FAQs">FAQs</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="copyright text-center">
        <div class="container d-flex flex-column flex-lg-row justify-content-center justify-content-lg-between align-items-center">

            <div class="d-flex flex-column align-items-center align-items-lg-start">
                <div>
                    © 2024 <strong><span>PetStore</span></strong>. All Rights Reserved
                </div>
            </div>

            <div class="social-links order-first order-lg-last mb-3 mb-lg-0">
                <a href="https://twitter.com"><i class="bi bi-twitter"></i></a>
                <a href="https://facebook.com"><i class="bi bi-facebook"></i></a>
                <a href="https://instagram.com"><i class="bi bi-instagram"></i></a>
            </div>

        </div>
    </div>

</footer>

<!-- Scroll Top -->
<a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center">
    <i class="bi bi-arrow-up-short"></i>
</a>

<!-- JS Files -->
<script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/js/main.js"></script>
</body>

</html>