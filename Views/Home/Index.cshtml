@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<section id="hero" class="hero section dark-background">

    <div id="hero-carousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="5000">

        <div class="carousel-item active">
            <img src="~/img/hero_1.jpg" alt="Happy pets">
            <div class="carousel-container">
                <h2>Companionship That Brings Joy</h2>
                <p>Discover the perfect companion to fill your home with love and happiness. We have everything your pet
                    needs to thrive.</p>
            </div>
        </div><!-- End Carousel Item -->

        <div class="carousel-item">
            <img src="~/img/hero_2.jpg" alt="Healthy pets">
            <div class="carousel-container">
                <h2>Care for Your Pets, Naturally</h2>
                <p>From nutritious food to eco-friendly toys, we prioritize your pet's well-being and happiness with
                    every product.</p>
            </div>
        </div><!-- End Carousel Item -->

        <div class="carousel-item">
            <img src="~/img/hero_3.jpg" alt="Pets with toys">
            <div class="carousel-container">
                <h2>Making Memories with Your Pets</h2>
                <p>Find everything you need to create unforgettable moments with your furry, feathery, or scaly
                    friends.</p>
            </div>
        </div><!-- End Carousel Item -->

        <div class="carousel-item">
            <img src="~/img/hero_4.jpg" alt="Pet grooming">
            <div class="carousel-container">
                <h2>Expert Grooming Services</h2>
                <p>Keep your pets looking and feeling their best with our professional grooming services, tailored to
                    every breed.</p>
            </div>
        </div><!-- End Carousel Item -->

        <div class="carousel-item">
            <img src="~/img/hero_5.jpg" alt="Pet adoption">
            <div class="carousel-container">
                <h2>Adopt, Don't Shop</h2>
                <p>Open your heart to a pet in need. Explore our adoption services and give a forever home to a
                    deserving animal.</p>
            </div>
        </div><!-- End Carousel Item -->

        <a class="carousel-control-prev" href="#hero-carousel" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon bi bi-chevron-left" aria-hidden="true"></span>
        </a>

        <a class="carousel-control-next" href="#hero-carousel" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon bi bi-chevron-right" aria-hidden="true"></span>
        </a>

        <ol class="carousel-indicators"></ol>

    </div>

</section><!-- /Hero Section -->

<!-- Services Section -->
<section id="services" class="services section">

    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>SERVICES</h2>
        <p>Dedicated to Your Pet's Happiness and Health</p>
    </div><!-- End Section Title -->

    <div class="content">
        <div class="container">
            <div class="row g-0">

                <!-- Service 1: Pet Grooming -->
                <div class="col-lg-3 col-md-6">
                    <div class="service-item">
                        <span class="number">01</span>
                        <div class="service-item-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 512 512" fill="currentColor">
                                <path d="M256 0c-70.693 0-128 57.308-128 128s57.307 128 128 128 128-57.308 128-128-57.307-128-128-128zm0 224c-39.766 0-72 32.234-72 72s32.234 72 72 72 72-32.234 72-72-32.234-72-72-72z"/>
                            </svg>
                        </div>
                        <div class="service-item-content">
                            <h3 class="service-heading">Pet Grooming</h3>
                            <p>Professional grooming services to keep your pets clean and stylish.</p>
                        </div>
                    </div>
                </div>

                <!-- Service 2: Veterinary Care -->
                <div class="col-lg-3 col-md-6">
                    <div class="service-item">
                        <span class="number">02</span>
                        <div class="service-item-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 512 512" fill="currentColor">
                                <path d="M256 0c-70.693 0-128 57.308-128 128s57.307 128 128 128 128-57.308 128-128-57.307-128-128-128zm0 224c-39.766 0-72 32.234-72 72s32.234 72 72 72 72-32.234 72-72-32.234-72-72-72z"/>
                            </svg>
                        </div>
                        <div class="service-item-content">
                            <h3 class="service-heading">Veterinary Care</h3>
                            <p>Access expert veterinary services for the well-being of your pets.</p>
                        </div>
                    </div>
                </div>

                <!-- Service 3: Pet Training -->
                <div class="col-lg-3 col-md-6">
                    <div class="service-item">
                        <span class="number">03</span>
                        <div class="service-item-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 512 512" fill="currentColor">
                                <path d="M256 0c-70.693 0-128 57.308-128 128s57.307 128 128 128 128-57.308 128-128-57.307-128-128-128zm0 224c-39.766 0-72 32.234-72 72s32.234 72 72 72 72-32.234 72-72-32.234-72-72-72z"/>
                            </svg>
                        </div>
                        <div class="service-item-content">
                            <h3 class="service-heading">Pet Training</h3>
                            <p>Expert training sessions to teach your pets good behavior and obedience.</p>
                        </div>
                    </div>
                </div>

                <!-- Service 4: Adoption Services -->
                <div class="col-lg-3 col-md-6">
                    <div class="service-item">
                        <span class="number">04</span>
                        <div class="service-item-icon">
                            <svg xmlns="http://www.w3.org/2000/svg" width="80" height="80" viewBox="0 0 512 512" fill="currentColor">
                                <path d="M256 0c-70.693 0-128 57.308-128 128s57.307 128 128 128 128-57.308 128-128-57.307-128-128-128zm0 224c-39.766 0-72 32.234-72 72s32.234 72 72 72 72-32.234 72-72-32.234-72-72-72z"/>
                            </svg>
                        </div>
                        <div class="service-item-content">
                            <h3 class="service-heading">Adoption Services</h3>
                            <p>Find your new furry friend through our trusted adoption services.</p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

